<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <!-- 模块:order 业务对像:Cart 管理后台 tiles模板配置 -->
    <!-- 作者:haipege -->
    <!-- Cart 管理 首页(列表页) -->
	<definition name="order.cart.manager" extends="default.manager">
	    <put-attribute name="default-center" value="order.cart.center"></put-attribute>
	</definition>
	<definition name="order.cart.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/order/cart/cart_center.jsp"></put-attribute>
	</definition>
	
	<!-- Cart 新增,编辑页面 -->
	<definition name="order.cart.update" extends="default.manager">
	    <put-attribute name="default-center" value="order.cart.update.center"></put-attribute>
	</definition>
	<definition name="order.cart.update.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/order/cart/cart_update.jsp"></put-attribute>
	</definition>
	
	<!-- Cart 明细页 -->
	<definition name="order.cart.detail" extends="default.manager">
	    <put-attribute name="default-center" value="order.cart.detail.center"></put-attribute>
	</definition>
	<definition name="order.cart.detail.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/order/cart/cart_detail.jsp"></put-attribute>
	</definition>
	
</tiles-definitions>
