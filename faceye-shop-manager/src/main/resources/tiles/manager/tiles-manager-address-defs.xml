    <!-- 送货地址 : Address 管理 首页(列表页) -->
	<definition name="customer.address.manager" extends="default.manager">
	    <put-attribute name="default-center" value="customer.address.center"></put-attribute>
	</definition>
	<definition name="customer.address.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/customer/address/address_center.jsp"></put-attribute>
	</definition>
	
	<!-- 送货地址 新增,编辑页面 -->
	<definition name="customer.address.update" extends="default.manager">
