	</definition>
	<definition name="customer.address.update.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/customer/address/address_update.jsp"></put-attribute>
	</definition>
	
	<!-- 送货地址 明细页 -->
	<definition name="customer.address.detail" extends="default.manager">
	    <put-attribute name="default-center" value="customer.address.detail.center"></put-attribute>
	</definition>
	<definition name="customer.address.detail.center" extends="default.center">
	    <put-attribute name="default-center-right" value="/component/customer/address/address_detail.jsp"></put-attribute>
	</definition>
	
